<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- RESOURCELOADER FOR JDBC -->
	<bean id="databaseResourceLoader" class="at.wm.wmutils.config.DatabaseResourceLoader">
		<property name="dataSource" ref="dataSource" />
		<property name="databaseTableName" value="app_config" />
		<property name="databaseKeyColumn" value="cfg_key" />
		<property name="databaseValueColumn" value="cfg_value" />
	</bean>

	<!-- REGISTER RESOURCELOADER WITH APPLICATION CONTEXT -->
	<bean id="databaseResourceLoaderRegisterer" class="at.wm.wmutils.config.DatabaseResourceLoaderRegisterer">
		<property name="databaseResourceLoader" ref="databaseResourceLoader" />
	</bean>

	<!-- -->
	<bean id="messages"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>db:</value>
			</list>
		</property>
		<property name="cacheSeconds" value="1" />
	</bean>

</beans>